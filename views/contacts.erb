<h2>Контакты</h2>

<form action="/contacts" method="POST" role="form" form-control-lg>

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="username" type="text" class="form-control" placeholder="Ваше имя" value="<%= @username %>">
  </div>

  <div class="form-group">
    <label>Ваш email</label>
    <input name="email" type="phone" class="form-control" placeholder="email" value="<%= @email %>">
  </div>



<div class="form-group">
    <label for="exampleFormControlTextarea1">Ваше сообщение</label>
    <textarea name= "text" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea value="<%= @text %>">
  </div>


  <button type="submit" class="btn btn-primary">Отправить</button>

</form>

