<h2>Bookings</h2>

<table class="table table-hover">


   <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Дата</th>
      <th scope="col">Барбер</th>
      <th scope="col">Цвет</th>
    </tr>
  </thead>

<% @results.each do |row| %>

  <tbody>
  <tr>
  	<td><%= row['id'] %></td>
    <td><%= row['username'] %></td>
    <td><%= row['phone'] %></td>
    <td><%= row['datestamp'] %></td>
    <td><%= row['barber'] %></td>
    <td style="background-color: <%= row['color'] %> ;"><%= row['color'] %></td>
  </tr>
</tbody>

<% end %>

</table>